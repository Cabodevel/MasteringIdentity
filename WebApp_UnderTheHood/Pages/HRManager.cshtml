@page
@model WebApp_UnderTheHood.Pages.HRManagerModel
@{
}
<h1>HR Manager</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Date</td>
            <td>Temp Cº</td>
            <td>Temp Fº</td>
            <td>Summary</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WeatherForecastItems)
        {
            <tr>
                <td>@item.Date</td>
                <td>@item.TemperatureC</td>
                <td>@item.TemperatureF</td>
                <td>@item.Summary</td>
            </tr>
        }
    </tbody>
</table>
